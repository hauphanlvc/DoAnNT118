<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Action_bar_danh_sach"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/LightBlue"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_danh_sach"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/boards_danh_sach"
            android:layout_width="143dp"
            android:layout_height="27dp"
            android:layout_marginStart="10dp"
            android:text="Danh sách dự án"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/back_danh_sach"
            app:layout_constraintStart_toEndOf="@+id/back_danh_sach"
            app:layout_constraintTop_toTopOf="@+id/back_danh_sach" />

        <ImageView
            android:id="@+id/notification_danh_sach"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_marginStart="96dp"
            android:contentDescription="noficication symbol"
            android:src="@drawable/ic_notifications"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/boards_danh_sach"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/textView3_ds"
            android:layout_width="21dp"
            android:layout_height="19dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="0"
            app:layout_constraintStart_toEndOf="@+id/notification_danh_sach"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_hoan_thanh_tao_danh_sach_task"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_vertical_dots" />

    </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/List_danh_sach"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/shape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Action_bar_danh_sach">


        </androidx.recyclerview.widget.RecyclerView>

        <EditText
            android:id="@+id/ed_them_danh_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Thêm danh sách "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/List_danh_sach" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_them_danh_sach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:contentDescription="nút thêm"
            android:focusable="true"
            app:backgroundTint="@color/LightBlue"
            app:layout_constraintBottom_toBottomOf="@+id/ed_them_danh_sach"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ed_them_danh_sach"
            app:layout_constraintTop_toTopOf="@+id/ed_them_danh_sach"
            app:srcCompat="@android:drawable/ic_input_add" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>